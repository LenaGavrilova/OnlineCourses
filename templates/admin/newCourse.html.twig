{% extends 'base.html.twig' %}
{% block title %}Создание нового курса{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center">Создание нового курса</h1>
                        {{ form_start(form) }}

                        <div class="form-group">
                            {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Название'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Описание'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.difficulty, {'attr': {'class': 'form-control','placeholder': 'Сложность'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.category, {'attr': {'class': 'form-control', 'placeholder': 'Категория'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.image, {'attr': {'class': 'form-control', 'placeholder': 'Изображение'}}) }}

                        </div>

                        <div class="form-group">
                            {{ form_row(form.create ,{'attr': {'class': 'btn btn-primary btn-block'}}) }}
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
