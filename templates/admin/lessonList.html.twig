{% extends 'base.html.twig' %}

{% block title %}Admin Panel - Lessons{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <h1>Уроки</h1>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Material</th>
            <th>Duration</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for lesson in lessons %}
            <tr>
                <td>{{ lesson.id }}</td>
                <td>{{ lesson.name }}</td>
                <td>{{ lesson.description }}</td>
                <td>{{ lesson.material }}</td>
                <td>{{ lesson.duration }}</td>
                <td>
                    <form action="{{ path('admin_lesson_edit',{"id":lesson.id}) }}" method="post">
                        <input hidden name="id" value="{{ lesson.id }}">
                        <button type="submit" class="btn btn-primary btn-sm">Редактировать</button>
                    </form>
                    <form action="{{ path('admin_lesson_delete',{"id":lesson.id}) }}" method="post">
                        <input hidden name="id" value="{{ lesson.id }}">
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_lesson_new') }}" class="btn btn-success">Добавить урок</a>
{% endblock %}
