{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <div class="container mt-5">
        <h1>Мой аккаунт</h1>
        <br>
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Информация об аккаунте:</h2>
                <br>
                <form id="userForm">
                    <div class="form-group">
                        <label for="name">Имя:</label>
                        <input type="text" class="form-control" id="name" name="name" value="{{ user.name }}" readonly>
                        <button type="button" class="btn btn-sm btn-primary edit-btn" data-field="name">Редактировать
                        </button>
                        <button type="button" class="btn btn-sm btn-success save-btn" data-field="name"
                                style="display: none;">Сохранить
                        </button>
                        <button type="button" class="btn btn-sm btn-secondary cancel-btn" data-field="name"
                                style="display: none;">Отмена
                        </button>
                    </div>
                    <div class="form-group">
                        <label for="surname">Фамилия:</label>
                        <input type="text" class="form-control" id="surname" name="surname" value="{{ user.surname }}"
                               readonly>
                        <button type="button" class="btn btn-sm btn-primary edit-btn" data-field="surname">
                            Редактировать
                        </button>
                        <button type="button" class="btn btn-sm btn-success save-btn" data-field="surname"
                                style="display: none;">Сохранить
                        </button>
                        <button type="button" class="btn btn-sm btn-secondary cancel-btn" data-field="surname"
                                style="display: none;">Отмена
                        </button>
                    </div>
                    <div class="form-group">
                        <label for="email">Почта:</label>
                        <input type="text" class="form-control" id="email" name="email" value="{{ user.email }}"
                               readonly>
                        <button type="button" class="btn btn-sm btn-primary edit-btn" data-field="email">Редактировать
                        </button>
                        <button type="button" class="btn btn-sm btn-success save-btn" data-field="email"
                                style="display: none;">Сохранить
                        </button>
                        <button type="button" class="btn btn-sm btn-secondary cancel-btn" data-field="email"
                                style="display: none;">Отмена
                        </button>
                    </div>

                    <div class="form-group">
                        <label for="date">Дата регистрации:</label>
                        <input type="text" class="form-control" id="date" name="date"
                               value="{{ user.registration_date }}" readonly>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <h3 class="d-block text-center mt-3">
        <a href="{{ path('home') }}">На главную</a>
    </h3>
    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2023 Онлайн-школа</p>
    </footer>
    <script src="{{ asset('assets/JS/ajaxUpdateUser.js') }}" type="text/javascript"></script>
{% endblock %}

