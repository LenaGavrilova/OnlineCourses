{% extends 'base.html.twig' %}
{% block title %}Вход{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center">Вход в аккаунт</h1>
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.message }}
                            </div>
                        {% endif %}

                        <form method="post">
                            <div class="form-group">
                                <input type="text" name="_username" required="required" class="form-control"
                                       placeholder='Логин'>
                            </div>
                            <div class="form-group">
                                <input type="password" id="password-input" name="_password" required="required"
                                       placeholder='Пароль' class="form-control">
                                <label><input type="checkbox" class="password-checkbox"> Показать пароль</label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Войти</button>
                        </form>
                        <br>
                        <div class="form-group">
                            <p class="text-center"> Еще нет аккаунта?</p>
                            <a href="{{ path('user_registration') }}" class='btn btn-primary btn-block'>Зарегистрироваться </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="{{ asset('assets/JS/showPassword.js') }}"></script>
{% endblock %}



