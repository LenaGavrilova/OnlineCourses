{% extends 'base.html.twig' %}
{% block title %}Регистрация{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center">Регистрация</h1>
                        {{ form_start(form) }}

                        <div class="form-group">
                            {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Имя'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.surname, {'attr': {'class': 'form-control', 'placeholder': 'Фамилия'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.email, {'attr': {'class': 'form-control', 'type':'email','placeholder': 'Email'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.login, {'attr': {'class': 'form-control', 'placeholder': 'Логин'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Пароль'}}) }}

                        </div>

                        <div class="form-group">
                            {{ form_row(form.register ,{'attr': {'class': 'btn btn-primary btn-block'}}) }}
                        </div>
                        <br>
                        <br>
                        <div class="form-group">
                            <p class="text-center"> Уже есть аккаунт?</p>
                            <a href="{{ path('user_login') }}" class='btn btn-primary btn-block'>Войти </a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}