{% extends 'base.html.twig' %}
{% block body %}
    {% include 'header.html.twig' %}
    <div class="container my-5">
        <div class="row">
            <div class="col-md-8">
                <h2>{{ course.name }}</h2>
                <div class="container my-5 text-center">
                    <h1 class="display-4 mb-4">Описание курса:</h1>
                    <ul class="list-unstyled text-left">
                        <li>
                            <h5>&#10003;{{ course.description }}</h5>
                        </li>

                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="card-title">Сложность: {{ course.difficulty }}</h5>
                    <h5 class="card-title">Категория: {{ course.category }}</h5>
                    <img src="{{ course.image }}" width="600"  >
                </div>
                <br>
                <form action="{{ path('addCourse') }}" method="post">
                    <input hidden name="id" value="{{ course.id}}">
                    <input hidden name="status" value="notPassed">
                    <button type="submit" class="btn btn-primary">Начать обучение</button>
                </form>
            </div>
            <div class="col-md-4">

            </div>
        </div>
    </div>
    <h3 class="d-block text-center mt-3">
        <a href="{{ path('home') }}">На главную</a>
    </h3>
    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2023 Онлайн-школа</p>
    </footer>
{%endblock %}